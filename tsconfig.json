{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "~~/*": ["../*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs"
    }
  }
}
